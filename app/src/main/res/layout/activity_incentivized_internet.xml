<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zw.org.isoc.hype.IncentivizedInternetActivity">

    <ImageView
        android:layout_width="183dp"
        android:layout_height="270dp"
        android:contentDescription="logo"
        android:paddingTop="25dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/am_mbare" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_request_webpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="Request Webpage"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="224dp"
            tools:layout_editor_absoluteY="55dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_view_cached"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="View Cached pages"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="224dp"
            tools:layout_editor_absoluteY="124dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_view_balance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="View Balance"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="224dp"
            tools:layout_editor_absoluteY="124dp" />

    </LinearLayout>

</android.widget.LinearLayout>